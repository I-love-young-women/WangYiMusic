<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.music.mapper.PlaylistsMapper">

    <resultMap id="playlistsResultMap" type="com.music.pojo.Playlists">
        <id property="playlistId" column="playlist_id"/>

<!--        <association property="users" javaType="com.music.pojo.Users">-->
<!--            <id property="userId" column="user_id"/>-->
<!--            &lt;!&ndash; 其他需要映射的字段 &ndash;&gt;-->
<!--        </association>-->
    </resultMap>
    <select id="getPlayList" resultMap="playlistsResultMap">
        select * from playlists p
        left join user_playlist u on u.playlist_id=p.playlist_id
        left join music m on m.music_id=u.music_id
        where p.user_id=#{id}
    </select>
</mapper>
